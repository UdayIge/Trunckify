<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trunckify - Shorten Your Links Instantly</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --dark-bg: #0f0f23;
            --card-bg: rgba(255, 255, 255, 0.1);
            --glass-bg: rgba(255, 255, 255, 0.08);
            --text-primary: #ffffff;
            --text-secondary: #b8c5d6;
            --border-color: rgba(255, 255, 255, 0.2);
            --shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            --glow: 0 0 30px rgba(102, 126, 234, 0.3);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--dark-bg);
            color: var(--text-primary);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background:
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.2) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            position: relative;
            z-index: 1;
        }

        .header {
            text-align: center;
            margin-bottom: 3rem;
            animation: fadeInDown 0.8s ease-out;
        }

        .header h1 {
            font-size: 3.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            font-weight: 800;
            letter-spacing: -2px;
        }

        .header p {
            font-size: 1.2rem;
            color: var(--text-secondary);
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        .success-message {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
            animation: slideInUp 0.6s ease-out;
            box-shadow: var(--shadow);
        }

        .success-message h3 {
            color: #4ade80;
            margin-bottom: 1rem;
            font-size: 1.3rem;
        }

        .generated-url {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .url-display {
            background: var(--dark-bg);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            font-family: 'Courier New', monospace;
            font-size: 1rem;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .url-display::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.6s ease;
        }

        .url-display:hover::before {
            left: 100%;
        }

        .url-display:hover {
            transform: translateY(-2px);
            box-shadow: var(--glow);
            border-color: #667eea;
        }

        .copy-btn {
            background: var(--success-gradient);
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 12px;
            color: white;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .copy-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(79, 172, 254, 0.4);
        }

        .url-form {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            border-radius: 24px;
            padding: 2.5rem;
            margin-bottom: 3rem;
            animation: fadeInUp 0.8s ease-out 0.2s both;
            box-shadow: var(--shadow);
        }

        .form-group {
            margin-bottom: 2rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.8rem;
            font-weight: 600;
            color: var(--text-primary);
            font-size: 1.1rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-wrapper input {
            width: 100%;
            padding: 1.2rem 1.5rem;
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid var(--border-color);
            border-radius: 16px;
            color: var(--text-primary);
            font-size: 1.1rem;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .input-wrapper input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .input-wrapper input::placeholder {
            color: var(--text-secondary);
        }

        .submit-btn {
            background: var(--primary-gradient);
            border: none;
            padding: 1.2rem 2.5rem;
            border-radius: 16px;
            color: white;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
        }

        .submit-btn:active {
            transform: translateY(-1px);
        }

        .urls-section {
            animation: fadeInUp 0.8s ease-out 0.4s both;
        }

        .section-title {
            font-size: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            background: var(--secondary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
        }

        .urls-table {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 2rem;
            overflow: hidden;
            box-shadow: var(--shadow);
        }

        .table-responsive {
            overflow-x: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        th {
            background: rgba(102, 126, 234, 0.1);
            padding: 1.2rem;
            text-align: left;
            font-weight: 700;
            color: var(--text-primary);
            border-bottom: 2px solid var(--border-color);
            font-size: 1rem;
        }

        td {
            padding: 1.2rem;
            border-bottom: 1px solid var(--border-color);
            color: var(--text-secondary);
            vertical-align: middle;
        }

        tr {
            transition: all 0.3s ease;
        }

        tr:hover {
            background: rgba(255, 255, 255, 0.05);
            transform: scale(1.01);
        }

        .redirect-btn {
            background: var(--success-gradient);
            color: white;
            text-decoration: none;
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .redirect-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(79, 172, 254, 0.4);
        }

        .clicks-badge {
            background: var(--primary-gradient);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.9rem;
            display: inline-block;
        }

        .empty-state {
            text-align: center;
            padding: 3rem;
            color: var(--text-secondary);
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
        }

        .url-cell {
            max-width: 300px;
            word-break: break-all;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
        }

        /* Animations */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(20px) scale(0.95);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .header h1 {
                font-size: 2.5rem;
            }

            .url-form {
                padding: 1.5rem;
            }

            .generated-url {
                flex-direction: column;
                align-items: stretch;
            }

            .url-display {
                text-align: center;
                word-break: break-all;
            }

            .submit-btn {
                width: 100%;
                justify-content: center;
            }

            th,
            td {
                padding: 0.8rem 0.5rem;
                font-size: 0.9rem;
            }

            .section-title {
                font-size: 1.5rem;
            }
        }

        /* Loading animation for form submission */
        .submit-btn.loading {
            pointer-events: none;
            opacity: 0.8;
        }

        .submit-btn.loading .btn-text {
            display: none;
        }

        .submit-btn.loading .loading-spinner {
            display: inline-block;
        }

        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <h1><i class="fas fa-link"></i> Trunckify</h1>
            <p>Transform your long URLs into short, shareable links instantly. Fast, secure, and completely free.</p>
        </header>

        <!-- Success Message -->
        <% if (locals.shortId) { %>
            <div class="success-message">
                <h3><i class="fas fa-check-circle"></i> Success! Your URL has been shortened</h3>
                <div class="generated-url">
                    <a href="http://localhost:5000/url/<%= locals.shortId %>" target="_blank" class="url-display"
                        id="generatedUrl">
                        http://localhost:5000/url/<%= locals.shortId %>
                    </a>
                    <button class="copy-btn" onclick="copyToClipboard()">
                        <i class="fas fa-copy"></i>
                        <span id="copyText">Copy</span>
                    </button>
                </div>
            </div>
            <% } %>

                <!-- URL Form -->
                <div class="url-form">
                    <form action="/url" method="POST" id="urlForm">
                        <div class="form-group">
                            <label for="url">
                                <i class="fas fa-globe"></i>
                                Enter your long URL
                            </label>
                            <div class="input-wrapper">
                                <input type="url" name="url" id="url"
                                    placeholder="https://example.com/very/long/url/path" required pattern="https?://.+"
                                    title="Please enter a valid URL starting with http:// or https://">
                            </div>
                        </div>
                        <button type="submit" class="submit-btn" id="submitBtn">
                            <span class="btn-text">
                                <i class="fas fa-magic"></i>
                                Shorten URL
                            </span>
                            <div class="loading-spinner"></div>
                        </button>
                    </form>
                </div>

                <!-- URLs Table Section -->
                <div class="urls-section">
                    <% if (locals.urls && locals.urls.length> 0) { %>
                        <h2 class="section-title">
                            <i class="fas fa-list"></i>
                            Your Shortened URLs
                        </h2>
                        <div class="urls-table">
                            <div class="table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th><i class="fas fa-hashtag"></i></th>
                                            <th><i class="fas fa-link"></i> Shorten URL</th>
                                            <th><i class="fas fa-external-link-alt"></i> Action</th>
                                            <th><i class="fas fa-mouse-pointer"></i> Clicks</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% urls.forEach((url, index)=> { %>
                                            <tr>
                                                <td><strong>
                                                        <%= index + 1 %>
                                                    </strong></td>
                                                <td class="url-cell">
                                                    http://localhost:5000/url/<%= url.shortId %>
                                                </td>
                                                <td>
                                                    <a href="http://localhost:5000/url/<%= url.shortId %>" target="_blank"
                                                        class="redirect-btn">
                                                        <i class="fas fa-external-link-alt"></i>
                                                        Visit
                                                    </a>
                                                </td>
                                                <td>
                                                    <span class="clicks-badge">
                                                        <i class="fas fa-eye"></i>
                                                        <%= url.visitedHistory.length %>
                                                    </span>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <% } else if (locals.urls && locals.urls.length===0) { %>
                            <div class="urls-table">
                                <div class="empty-state">
                                    <i class="fas fa-link"></i>
                                    <h3>You don't have any URLs Yet</h3>
                                    <p>Start by shortening your first URL above!</p>
                                </div>
                            </div>
                        <% } %>
                </div>
    </div>

    <script>
        // Copy to clipboard functionality
        function copyToClipboard() {
            const urlText = document.getElementById('generatedUrl').textContent;
            const copyBtn = document.getElementById('copyText');

            navigator.clipboard.writeText(urlText).then(() => {
                copyBtn.textContent = 'Copied!';
                setTimeout(() => {
                    copyBtn.textContent = 'Copy';
                }, 2000);
            }).catch(err => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = urlText;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);

                copyBtn.textContent = 'Copied!';
                setTimeout(() => {
                    copyBtn.textContent = 'Copy';
                }, 2000);
            });
        }

        // Form loading state
        document.getElementById('urlForm').addEventListener('submit', function () {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.classList.add('loading');
        });

        // Input validation feedback
        const urlInput = document.getElementById('url');
        urlInput.addEventListener('input', function () {
            if (this.value && !this.value.match(/^https?:\/\/.+/)) {
                this.setCustomValidity('Please enter a valid URL starting with http:// or https://');
            } else {
                this.setCustomValidity('');
            }
        });

        // Smooth scroll animation for success message
        if (document.querySelector('.success-message')) {
            setTimeout(() => {
                document.querySelector('.success-message').scrollIntoView({
                    behavior: 'smooth',
                    block: 'center'
                });
            }, 500);
        }
    </script>
</body>

</html>